# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true

# Pseudolayouts
alias fullscreen move screenOriginX;screenOriginY screenSizeX;screenSizeY
bind esc:alt ${fullscreen}

alias vfull move screenOriginX;windowTopLeftY screenSizeX;windowSizeY
alias hfull move windowTopLeftX;screenOriginY windowSizeX;screenSizeY

alias vsplit2-1 move screenOriginX;windowTopLeftY screenSizeX/2;windowSizeY
alias vsplit2-2 move screenOriginX+screenSizeX/2;windowTopLeftY screenSizeX/2;windowSizeY
bind f1:alt chain ${vsplit2-1} | ${vsplit2-2} | ${vfull}

alias hsplit2-1 move windowTopLeftX;screenOriginY windowSizeX;screenSizeY/2
alias hsplit2-2 move windowTopLeftX;screenOriginY+screenSizeY/2 windowSizeX;screenSizeY/2
bind f2:alt chain ${hsplit2-1} | ${hsplit2-2} | ${hfull}

# resolution may not be a multiple of 3, so some arithmetics is involved.
alias vsplit3-1 move screenOriginX;windowTopLeftY screenSizeX/3;windowSizeY
alias vsplit3-2 move screenOriginX+screenSizeX/3;windowTopLeftY screenSizeX/3;windowSizeY
alias vsplit3-3 move screenOriginX+2*screenSizeX/3;windowTopLeftY screenSizeX-2*screenSizeX/3;windowSizeY
alias vsplit3-12 move screenOriginX;windowTopLeftY 2*screenSizeX/3;windowSizeY
alias vsplit3-23 move screenOriginX+screenSizeX/3;windowTopLeftY screenSizeX-screenSizeX/3;windowSizeY
bind f3:alt chain ${vsplit3-12} | ${vsplit3-3} | ${vsplit3-1} | ${vsplit3-2} | ${vsplit3-23}

alias esplit4-1 move screenOriginX;screenOriginY screenSizeX/2;screenSizeY/2
alias esplit4-2 move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY/2
alias esplit4-3 move screenOriginX+screenSizeX/2;screenOriginY+screenSizeY/2 screenSizeX/2;screenSizeY/2
alias esplit4-4 move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX/2;screenSizeY/2
bind f4:alt chain ${esplit4-1} | ${esplit4-2} | ${esplit4-3} | ${esplit4-4}

# Throw Bindings

bind esc:ctrl chain throw 0 resize | throw 1 resize #too bad there is no relative screen position

# Focus Bindings
bind right:cmd;alt;ctrl    focus right
bind left:cmd;alt;ctrl     focus left
bind up:cmd;alt;ctrl       focus up
bind down:cmd;alt;ctrl     focus down
bind space:cmd;alt;ctrl    focus behind

# Moving window borders
alias incX screenSizeX/12
alias incY screenSizeY/12

bind h:cmd;alt       move windowTopLeftX-${incX};windowTopLeftY windowSizeX+${incX};windowSizeY
bind h:cmd;alt;ctrl  move windowTopLeftX+${incX};windowTopLeftY windowSizeX-${incX};windowSizeY

bind j:cmd;alt       move windowTopLeftX;windowTopLeftY windowSizeX;windowSizeY+${incY}
bind j:cmd;alt;ctrl  move windowTopLeftX;windowTopLeftY windowSizeX;windowSizeY-${incY}

bind k:cmd;alt       move windowTopLeftX;windowTopLeftY-${incY} windowSizeX;windowSizeY+${incY}
bind k:cmd;alt;ctrl  move windowTopLeftX;windowTopLeftY+${incY} windowSizeX;windowSizeY-${incY}

bind l:cmd;alt       move windowTopLeftX;windowTopLeftY windowSizeX+${incX};windowSizeY
bind l:cmd;alt;ctrl  move windowTopLeftX;windowTopLeftY windowSizeX-${incX};windowSizeY


# Window Hints
bind esc:cmd hint

# Switch currently doesn't work well so I'm commenting it out until I fix it.
#bind tab:cmd switch
